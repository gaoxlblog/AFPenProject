<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!--设置圆角-->
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/efw_write_comment_light_green" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">
            <shape android:shape="line">
                <stroke
                    android:width="1.5dp"
                    android:color="#4C96C274"
                    android:dashGap="4dp"
                    android:dashWidth="4dp" />
            </shape>
        </rotate>
    </item>

    <item>
        <shape android:shape="line">
            <stroke
                android:width="1.5dp"
                android:color="#4C96C274"
                android:dashGap="4dp"
                android:dashWidth="4dp" />
        </shape>
    </item>
</layer-list>