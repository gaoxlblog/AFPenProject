<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_ble"
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_ble"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:text="搜索设备"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="2"
            android:id="@+id/tv_x"
            android:gravity="start|center"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:text=""
            android:textColor="@color/black"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_d"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:textSize="12sp"
            android:text=""
            android:textColor="@color/black"/>
    </LinearLayout>

<FrameLayout
    android:background="@color/line_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_my_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="1111"/>
    <LinearLayout
        android:paddingTop="60dp"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.ugee.app.WriteMatrixView
            android:background="@color/transparent"
            android:id="@+id/view_matrix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="start"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/bt_title"
            android:text="功能栏"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@color/transparent"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_weight="1"
            android:gravity="start|center"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="地址:"/>
        <TextView
            android:id="@+id/tv_ble_name"
            android:layout_weight="3"
            android:gravity="start|center"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:text=""/>
        <Button
            android:visibility="gone"
            android:id="@+id/bt_photo"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:text="截图"
            android:background="@color/transparent"
            android:layout_height="match_parent"/>
        <Button
            android:layout_weight="2"
            android:id="@+id/bt_clean"
            android:background="@color/transparent"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="match_parent"
            android:text="清屏"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom">
        <Button
            android:visibility="gone"
            android:id="@+id/bt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="压力值"
            android:background="@color/transparent"/>
        <Button
            android:visibility="gone"
            android:id="@+id/bt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最小宽度"
            android:background="@color/transparent"/>

        <Button
            android:visibility="gone"
            android:id="@+id/bt_screen"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="切换屏幕" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_battery"
                android:layout_gravity="center"
                android:background="@mipmap/icon_battery"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_battery"
                android:gravity="center"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:drawablePadding="5dp"
                android:layout_height="match_parent"
                android:text="100%"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="bottom|center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="版本号:"/>
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="0dp"
                android:gravity="center|start"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:text="无"/>
        </LinearLayout>
        <Button
            android:id="@+id/bt_break"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:background="@color/transparent"
            android:textSize="16sp"
            android:text="断开"/>

    </LinearLayout>
</FrameLayout>

</LinearLayout>